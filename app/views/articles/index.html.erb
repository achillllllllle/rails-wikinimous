<div class="navbar bg-secondary bg-gradient">
  <h1>Articles</h1>
  <%= link_to "Add an article", new_article_path, class:"a-no-underline" %>
</div>

<div class="container">
  <ul class="w-25">
  <% @articles.each do |article| %>
    <div class="d-flex justify-content-between align-items-center border-top">
      <li><%= link_to article.title, article_path(article.id) %></li>
      <%= link_to article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </div>
  <% end %>
  </ul>
</div>
