<h1>Articles</h1>
<ul>
<% @articles.each do |article| %>
  <li><%= link_to article.title, article_path(article.id) %></li>
  <%= link_to "Delete",
  article_path(article),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
<% end %>
</ul>

<%= link_to "Add an article", articles_new_path %>
